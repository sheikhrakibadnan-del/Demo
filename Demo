            auth.onAuthStateChanged(user => {
                if (user) {
                    // ইউজার লগইন আছে
                    currentUser = user;
                    loadUserData(user.uid);
                    document.getElementById('user-name').textContent = user.displayName || `ইউজার${Math.floor(1000 + Math.random() * 9000)}`;
                    document.getElementById('user-email').textContent = user.email;
                    authModalEl.style.display = 'none';
                    mainContainerEl.style.display = 'block';
                } else {
                    // কোন ইউজার লগইন নেই
                    authModalEl.style.display = 'flex';
                    mainContainerEl.style.display = 'none';
                }
            });
            
            // ইভেন্ট লিসেনার সেটআপ
            loginTabEl.addEventListener('click', () => switchAuthTab('login'));
            registerTabEl.addEventListener('click', () => switchAuthTab('register'));
            switchToRegisterEl.addEventListener('click', () => switchAuthTab('register'));
            switchToLoginEl.addEventListener('click', () => switchAuthTab('login'));
            closeModalEl.addEventListener('click', () => authModalEl.style.display = 'none');
            loginBtnEl.addEventListener('click', loginUser);
            registerBtnEl.addEventListener('click', registerUser);
            logoutBtnEl.addEventListener('click', logoutUser);
        }
        
        // লগইন এবং রেজিস্টার ট্যাব সুইচ
        function switchAuthTab(tab) {
            if (tab === 'login') {
                loginTabEl.classList.add('active');
                registerTabEl.classList.remove('active');
                loginFormEl.classList.add('active');
                registerFormEl.classList.remove('active');
            } else {
                loginTabEl.classList.remove('active');
                registerTabEl.classList.add('active');
                loginFormEl.classList.remove('active');
                registerFormEl.classList.add('active');
            }
        }
        
        // ইউজার লগইন
        function loginUser() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            
            if (!email || !password) {
                showAdNotification("ইমেইল এবং পাসওয়ার্ড উভয়ই লিখুন");
                return;
            }
            
            auth.signInWithEmailAndPassword(email, password)
                .then((userCredential) => {
                    // লগইন সফল
                    showAdNotification("লগইন সফল হয়েছে!");
                })
                .catch((error) => {
                    showAdNotification(error.message);
                });
        }
        
        // নতুন ইউজার রেজিস্টার
        function registerUser() {
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const confirmPassword = document.getElementById('register-confirm-password').value;
            
            if (!name || !email || !password || !confirmPassword) {
                showAdNotification("সব ফিল্ড পূরণ করুন");
                return;
            }
            
            if (password !== confirmPassword) {
                showAdNotification("পাসওয়ার্ড মিলছে না");
                return;
            }
            
            if (password.length < 6) {
                showAdNotification("পাসওয়ার্ড কমপক্ষে ৬ ক্যারেক্টার হতে হবে");
                return;
            }
            
            auth.createUserWithEmailAndPassword(email, password)
                .then((userCredential) => {
                    // ইউজার তৈরি হয়েছে
                    return userCredential.user.updateProfile({
                        displayName: name
                    }).then(() => {
                        // ফায়ারস্টোরে ইউজার ডকুমেন্ট তৈরি করুন
                        return db.collection('users').doc(userCredential.user.uid).set({
                            name: name,
                            email: email,
                            watchedAds: 0,
                            points: 0,
                            withdrawals: [],
                            createdAt: firebase.firestore.FieldValue.serverTimestamp()
                        });
                    });
                })
                .then(() => {
                    showAdNotification("রেজিস্ট্রেশন সফল হয়েছে!");
                    switchAuthTab('login');
                })
                .catch((error) => {
                    showAdNotification(error.message);
                });
        }
        
        // ইউজার লগআউট
        function logoutUser() {
            auth.signOut().then(() => {
                showAdNotification("সফলভাবে লগআউট হয়েছে");
            }).catch((error) => {
                showAdNotification(error.message);
            });
        }
        
        // ফায়ারস্টোর থেকে ইউজার ডেটা লোড
        function loadUserData(userId) {
            db.collection('users').doc(userId).get()
                .then(doc => {
                    if (doc.exists) {
                        const userData = doc.data();
                        watchedAdsCount = userData.watchedAds || 0;
                        earnedPoints = userData.points || 0;
                        updateUI();
                    }
                })
                .catch(error => {
                    console.error("ইউজার ডেটা লোডে ত্রুটি:", error);
                });
        }
        
        // ফায়ারস্টোরে ইউজার ডেটা সেভ
        function saveUserData() {
            if (!currentUser) return;
            
            db.collection('users').doc(currentUser.uid).update({
                watchedAds: watchedAdsCount,
                points: earnedPoints
            })
            .catch(error => {
                console.error("ইউজার ডেটা সেভে ত্রুটি:", error);
            });
        }
        
        // UI আপডেট
        function updateUI() {
            watchedAdsEl.textContent = watchedAdsCount;
            earnedPointsEl.textContent = earnedPoints.toFixed(2);
            
            // পয়েন্ট পরিবর্তনে অ্যানিমেশন যোগ করুন
            earnedPointsEl.classList.remove('pulse');
            void earnedPointsEl.offsetWidth; // রিফ্লো ট্রিগার
            earnedPointsEl.classList.add('pulse');
            
            // পর্যাপ্ত পয়েন্ট না থাকলে উত্তোলন বাটন ডিজেবল
            withdrawBtnEl.disabled = earnedPoints < MIN_WITHDRAWAL;
        }
        
        // মনিটাগ ব্যবহার করে বিজ্ঞাপন দেখুন
        function watchAd() {
            // বিজ্ঞাপন নোটিফিকেশন দেখান
            showAdNotification("বিজ্ঞাপন লোড হচ্ছে... অপেক্ষা করুন");
            
            // মনিটাগ বিজ্ঞাপন দেখান
            if (typeof show_9593694 === 'function') {
                show_9593694().then(() => {
                    // বিজ্ঞাপন সফলভাবে দেখানো হয়েছে
                    watchedAdsCount++;
                    earnedPoints += POINTS_PER_AD;
                    
                    // ডেটা সেভ করুন
                    saveUserData();
                    updateUI();
                    
                    // সফলতা নোটিফিকেশন দেখান
                    showAdNotification("বিজ্ঞাপন সম্পন্ন হয়েছে! +০.৩৫ পয়েন্ট যোগ হয়েছে");
                }).catch(error => {
                    console.error("বিজ্ঞাপন ত্রুটি:", error);
                    showAdNotification("বিজ্ঞাপন দেখাতে ব্যর্থ। আবার চেষ্টা করুন।");
                });
            } else {
                // সিমুলেটেড বিজ্ঞাপনের জন্য ফ্যালব্যাক
                setTimeout(() => {
                    watchedAdsCount++;
                    earnedPoints += POINTS_PER_AD;
                    
                    // ডেটা সেভ করুন
                    saveUserData();
                    updateUI();
                    
                    // সফলতা নোটিফিকেশন দেখান
                    showAdNotification("বিজ্ঞাপন সম্পন্ন হয়েছে! +০.৩৫ পয়েন্ট যোগ হয়েছে");
                }, 2000);
            }
        }
        
        // Giga Ads ব্যবহার করে ভিজিট করে উপার্জন ফাংশন
        function visitToEarn() {
            // বাটন ডিজেবল করুন
            visitToEarnBtnEl.disabled = true;
            visitToEarnBtnEl.textContent = "বিজ্ঞাপন লোড হচ্ছে...";
            
            // Giga Ad দেখান
            if (typeof window.showGiga === 'function') {
                window.showGiga()
                    .then(() => {
                        // বিজ্ঞাপন সফলভাবে দেখানো হয়েছে
                        earnedPoints += 0.40;
                        saveUserData();
                        updateUI();
                        
                        // বাটন সক্রিয় করুন
                        visitToEarnBtnEl.disabled = false;
                        visitToEarnBtnEl.textContent = "ভিজিট করে উপার্জন করুন";
                        
                        // নোটিফিকেশন দেখান
                        showAdNotification("Giga Ad সম্পন্ন! +০.৪০ পয়েন্ট");
                    })
                    .catch(e => {
                        console.error("Giga Ad Error:", e);
                        
                        // বাটন সক্রিয় করুন
                        visitToEarnBtnEl.disabled = false;
                        visitToEarnBtnEl.textContent = "ভিজিট করে উপার্জন করুন";
                        
                        // ত্রুটি নোটিফিকেশন দেখান
                        showAdNotification("Giga Ad ব্যর্থ। পরে চেষ্টা করুন");
                    });
            } else {
                // Giga Ads না থাকলে মনিটাগ অ্যাড ফ্যালব্যাক
                if (typeof show_9593694 === 'function') {
                    show_9593694().then(() => {
                        earnedPoints += 0.35;
                        saveUserData();
                        updateUI();
                        showAdNotification("মনিটাগ অ্যাড সম্পন্ন! +০.৩৫ পয়েন্ট");
                    });
                } else {
                    showAdNotification("কোনো অ্যাড সিস্টেম প্রস্তুত নয়");
                }
                visitToEarnBtnEl.disabled = false;
                visitToEarnBtnEl.textContent = "ভিজিট করে উপার্জন করুন";
            }
        }
        
        // উত্তোলন অনুরোধ
        function requestWithdrawal() {
            const amount = parseFloat(document.getElementById('withdraw-amount').value);
            const method = document.getElementById('payment-method').value;
            const details = document.getElementById('payment-details').value;
            
            if (!amount || !method || !details) {
                showAdNotification("সব উত্তোলন ফিল্ড পূরণ করুন");
                return;
            }
            
            if (amount < MIN_WITHDRAWAL) {
                showAdNotification(`ন্যূনতম উত্তোলন ৳${MIN_WITHDRAWAL.toFixed(2)} (${MIN_WITHDRAWAL} পয়েন্ট)`);
                return;
            }
            
            const requiredPoints = amount * POINTS_TO_TAKA_RATE;
            
            if (requiredPoints > earnedPoints) {
                showAdNotification(`৳${amount.toFixed(2)} উত্তোলনের জন্য আপনার ${requiredPoints} পয়েন্ট প্রয়োজন`);
                return;
            }
            
            if (!currentUser) {
                showAdNotification("উত্তোলনের জন্য আপনাকে লগইন করতে হবে");
                return;
            }
            
            // উত্তোলন অনুরোধ তৈরি করুন
            const withdrawalData = {
                userId: currentUser.uid,
                amount: amount,
                points: requiredPoints,
                method: method,
                details: details,
                status: "pending",
                createdAt: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            // উত্তোলন কালেকশনে যোগ করুন
            db.collection('withdrawals').add(withdrawalData)
                .then(() => {
                    // ইউজার থেকে পয়েন্ট কাটুন
                    earnedPoints -= requiredPoints;
                    return db.collection('users').doc(currentUser.uid).update({
                        points: firebase.firestore.FieldValue.increment(-requiredPoints)
                    });
                })
                .then(() => {
                    showAdNotification(`৳${amount.toFixed(2)} উত্তোলন অনুরোধ জমা হয়েছে!`);
                    updateUI();
                    // ফর্ম ক্লিয়ার করুন
                    document.getElementById('withdraw-amount').value = '';
                    document.getElementById('payment-method').value = '';
                    document.getElementById('payment-details').value = '';
                })
                .catch(error => {
                    showAdNotification("উত্তোলন প্রসেসিং ত্রুটি: " + error.message);
                });
        }
        
        // বিজ্ঞাপন নোটিফিকেশন দেখান
        function showAdNotification(message) {
            adNotificationEl.textContent = message;
            adNotificationEl.style.display = 'block';
            
            setTimeout(() => {
                adNotificationEl.style.display = 'none';
            }, 3000);
        }
        
        // পেজ লোড হলে অ্যাপ ইনিশিয়ালাইজ
        window.onload = initApp;
    </script>
</body>
</html>
